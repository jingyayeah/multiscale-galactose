  virtual bool leave();

  void loadResult();

protected:
  virtual bool enterProtected();

protected slots:

private:
  const CSteadyStateProblem * mpProblem;
  CSteadyStateTask * mpTask;
  bool mUpToDate;

  void init();

private slots:
  void slotSave(void);
  void slotUpdateModel();
};

#endif // COPASI_CQSteadyStateResult
